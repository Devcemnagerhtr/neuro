  {name:'Kâº Channel Selectivity Filter', scale:'atom', icon:'ðŸŽšï¸'},
  {name:'Water Permeation Through Aquaporin', scale:'atom', icon:'ðŸ’§'},
  {name:'GABA_A Receptor Allosteric Sites', scale:'atom', icon:'ðŸ’‰'},
